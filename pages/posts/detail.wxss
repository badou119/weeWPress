/* pages/posts/detail.wxss */
@import "../../libs/wxParse/wxParse.wxss";

.container {
}
.posts-info {
  padding: 30rpx;
  background: #fff;
}
.posts-info .-title {
  font-size: 32rpx;
}
.posts-info .-meta {
  font-size: 24rpx;
  color: #999;
  padding: 20rpx 0;
}
.posts-info .-desc {
  font-size: 28rpx;
  background: #f9f9f9;
  border-top: 2px solid #35495e;
  padding: 30rpx;
  margin-top: 30rpx;
  line-height: 1.9;
}

.posts-info .-desc::before {
  display: inline-block;
  content: "";
  width: 48rpx;
  height: 48rpx;
  margin-right: 30rpx;
  background-image: url('data:image/svg+xml;base64,');
  -webkit-background-size: 100%;
  background-size: 100%;
  background-position: 0 0;
  background-repeat: no-repeat;
}

.posts-info .posts-protect {
  padding: 0 20rpx;
  margin: 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 6rpx;
  border: 1px solid #41B883;
}

.posts-info .-content {
  padding: 20rpx 0;
  line-height: 1.5;
  color: #333;
}

.posts-info .-content view {
  line-height: 1.5;
}
.posts-info .-content image {
  margin: 20rpx 0;
}
.posts-info .-content .wxParse-p {
  margin-bottom: 20rpx;
}
