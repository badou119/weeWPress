/** index.wxss **/
page, .container {
  background: #fff;
}

.top-posts {
  padding: 0 30rpx;
  overflow: hidden;
}

.top-posts swiper {
  width: 100%;
  height: 440rpx;
}

.top-posts .tp-img {
  width: 100%;
  height: 100%;
  -webkit-background-size: 100% 100%;
  background-size: 100% 100%;
  background-position: center center;
  background-repeat: no-repeat;
}

.articles-nav {
  width: 100%;
  height: 88rpx;
  white-space: nowrap;
  margin-bottom: 20rpx;
}
.articles-nav scroll-view {
  position: static;
  background: #fff;
  border-top: 1px solid #fff;
}
.articles-nav.is-actived scroll-view {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 999;
  border-color: #eee;
}

.articles-nav .an-item {
  display: inline-block;
  padding: 0 30rpx;
  height: 88rpx;
  line-height: 88rpx;
  color: #35495e;
  cursor: pointer;
}

.articles-nav .an-item.is-actived {
  color: #41b883;
}

.articles-list {
  padding: 0;
  background: #fff;
}

.articles-list .al-item {
  display: -webkit-flex;
  display: -moz-flex;
  display: -ms-flex;
  display: -o-flex;
  display: flex;
  padding: 20rpx 30rpx;
}

.articles-list .al-item .cont-prev {
  flex-grow: 1;
  margin-right: 20rpx;
  display: -webkit-flex;
  display: -moz-flex;
  display: -ms-flex;
  display: -o-flex;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}

.articles-list .al-item .cont-prev .title {
  font-size: 28rpx;
  color: #35495e;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  overflow: hidden;
}

.articles-list .al-item .cont-prev .meta {
  font-size: 24rpx;
  color: #35495e;
  opacity: 0.35;
  white-space: nowrap;
  overflow: hidden;
}
.articles-list .al-item .cont-prev .meta text {
  margin-right: 20rpx;
}
.articles-list .al-item .img-prev {
  flex-shrink: 0;
  width: 210rpx;
  height: 140rpx;
  background-size: cover;
  background-position: center center;
  background-repeat: no-repeat;
}
